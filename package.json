{
  "name": "rc-esm",
  "version": "2.0.0",
  "description": "hardwired configuration loader with TypeScript support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "browser.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "browser": "./browser.js"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    },
    "./utils": {
      "import": "./dist/utils.js",
      "types": "./dist/utils.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsx src/index.ts",
    "test": "node --test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test && npm run lint && npm run format:check",
    "clean": "rm -rf dist/ node/ coverage/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kfancy/rc-esm.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "license": "(BSD-2-Clause OR MIT OR Apache-2.0)",
  "keywords": [
    "config",
    "rc",
    "unix",
    "defaults",
    "typescript",
    "esm",
    "configuration",
    "cli"
  ],
  "bin": "./dist/cli.js",
  "author": "kfancy <kfancy@gmail.com>",
  "engines": {
    "node": ">=24",
    "npm": ">=11"
  },
  "dependencies": {
    "ini": "~1.3.0",
    "minimist": "^1.2.0",
    "strip-json-comments": "~2.0.1"
  },
  "devDependencies": {
    "@types/ini": "^1.3.34",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.10.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist/",
    "browser.js",
    "README.md",
    "LICENSE*"
  ]
}
